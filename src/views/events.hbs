<h1 class="main-title">EVENTS</h1>

<section class="main-container">
  <ul class="events-list" id="eventsList">

    {{#each events}}

    <li class="event-item">

      <a class="event-link" href="/event/{{this.id}}">
        <h2 class="event-name">{{this.title}}</h2>
        <image class="event-image" src="{{this.image}}" alt="{{this.title}}">
      </a>
      <p class="short-description">Description: {{ this.description }}</p>
      <p class="event-day">When? {{ this.day }}
        <span class="event-date"> {{ this.date }} </span>
        <span class="event-time"> {{ this.time }} </span>
      </p>
      <p class="event-location"> Where? {{ this.location }}</p>
      
    </li>

    {{/each}}

  </ul>
</section>

<script src="/js/index.js"></script>
